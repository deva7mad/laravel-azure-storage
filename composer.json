{
    "name": "deva7mad/laravel-azure-storage",
    "description": "Microsoft Azure Blob Storage integration for Laravel's Storage API",
    "type": "library",
    "keywords": ["storage","laravel","azure"],
    "require": {
        "league/flysystem-azure-blob-storage": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "mockery/mockery": "^1.4",
        "php-coveralls/php-coveralls": "^2.4",
        "psy/psysh": "^0.9.12",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^3.18",
        "orchestra/testbench": "^6.4",
        "league/flysystem-cached-adapter": "^1.1"
    },
    "suggest": {
        "league/flysystem-cached-adapter": "^1.1"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Ahmad Elkenany",
            "email": "dev.elknany@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Deva7mad\\LaravelAzureStorage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Deva7mad\\LaravelAzureStorage\\AzureStorageServiceProvider"
            ]
        }
    }
}
